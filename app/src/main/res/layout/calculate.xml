<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculateActivity" >

    <ScrollView
        android:id="@+id/scvCalculate"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
		    <LinearLayout
		        android:id="@+id/llStreetAddress"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_marginTop="10dp"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/address" />
		
		        <EditText
		            android:id="@+id/txtAddress"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
                    android:hint="@string/address"
		            android:inputType="text" />
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/llCityStZip"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llStreetAddress"
		        android:orientation="horizontal" >

		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/citystzip" />
		
		        <EditText
		            android:id="@+id/txtCityStZip"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="text" />
		        		
	       </LinearLayout>
		
		   <LinearLayout
		        android:id="@+id/llSquareFootage"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llCityStZip"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/sq_footage" />
		
		        <EditText
		            android:id="@+id/txtSq_Footage"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/llBedrooms"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llSquareFootage"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/bedrooms" />
		
		        <EditText
		            android:id="@+id/txtBedrooms"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/llBathrooms"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llBedrooms"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/bathrooms" />
		
		        <EditText
		            android:id="@+id/txtBathrooms"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/llSalePrice"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llBathrooms"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/salePrice" />
		
		        <EditText
		            android:id="@+id/txtSalePrice"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/llFMVARV"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/llSalePrice"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/FMVARV" />
		
		        <EditText
		            android:id="@+id/txtFMVARV"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/llBudgetItems"
		        android:layout_width="match_parent"
		        android:layout_height="25sp"
		        android:layout_below="@+id/llFMVARV"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="25sp"
		            android:layout_weight="1"
		            android:text="@string/budgetItems" />		
		    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/llBudgetItemsTxt"
		        android:layout_width="match_parent"
		        android:layout_height="70sp"
		        android:layout_below="@+id/llBudgetItems"
		        android:orientation="horizontal" >
		
		        <EditText
		            android:id="@+id/txtBudgetItems"
		            android:layout_width="fill_parent" 
		           	android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:scrollbars="vertical"
		            android:inputType="textMultiLine"
		            android:lines="4"
		            android:minLines="2"
		            android:maxLines="4"
		            android:gravity="top|start"
		            android:textSize="12sp"
		            android:ems="10"
		            android:imeOptions="actionDone" />
		    </LinearLayout>
		    		    		
		    <RadioGroup
		        android:id="@+id/rdoRehab"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_gravity="center_horizontal"
		        android:layout_below="@+id/llBudgetItemsTxt"
		        android:orientation="horizontal" >
		
		        <RadioButton
		            android:id="@+id/rdoRehabNumber"
		            android:layout_width="match_parent"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:textSize="15sp"
		            android:text="@string/rehab_number" />
		
		        <RadioButton
		            android:id="@+id/rdoRehabType"
		            android:layout_width="match_parent"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:textSize="15sp"
		            android:text="@string/rehab_type" />
		    </RadioGroup>
		    
		    <LinearLayout
		        android:id="@+id/llRehabBudget"
		        android:layout_width="match_parent"
		        android:layout_height="48sp"
		        android:layout_below="@+id/rdoRehab"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/tvRehabBudget"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/rehab_budget" />
		
		        <EditText
		            android:id="@+id/txtRehabBudget"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
                    android:autofillHints=""
                    android:textSize="12sp"
		            android:ems="10"
		            android:imeOptions="actionDone"
		            android:inputType="numberDecimal" />
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/llRehabType"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_below="@+id/rdoRehab"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/tvRehabType"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:text="@string/rehab_class" />
		
		        <Spinner
		            android:id="@+id/spnRehabType"
		            android:layout_width="0sp"
		            android:layout_height="48sp"
		            android:layout_weight="0.5"
		            android:ems="10" />
		    </LinearLayout>		    
		    <LinearLayout
		        android:id="@+id/llBlankView"
		        android:layout_width="match_parent"
		        android:layout_height="100sp"
		        android:layout_below="@+id/llRehabType"
		        android:orientation="horizontal" >
	
			    <View
		         	android:layout_width="0sp"
		         	android:layout_height="100sp" />
			</LinearLayout>
		</RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/llHelpSubmit"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:layout_above="@+id/llAdCalcView"
        android:orientation="horizontal">

        <Button
            android:id="@+id/txtHelp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100sp"
            android:layout_height="54sp"
            android:layout_weight="0.5"
            android:text="@string/help"
            android:background="#690"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSubmit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100sp"
            android:layout_height="54sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/submit"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/llAdCalcView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
        
	    <com.google.android.gms.ads.AdView
	        android:id="@+id/adCalcView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        ads:adSize="BANNER"
	        ads:adUnitId="@string/banner_ad_unit_id" >
	    </com.google.android.gms.ads.AdView>        
    </LinearLayout>
    
</RelativeLayout>